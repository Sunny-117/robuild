{
  "name": "robuild",
  "type": "module",
  "version": "0.1.5",
  "packageManager": "pnpm@10.11.1",
  "description": "Zero-config ESM/TS package builder. Powered by Rolldown and Oxc",
  "license": "MIT",
  "repository": "Sunny-117/robuild",
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.mjs",
    "./config": "./dist/config.mjs"
  },
  "types": "./dist/index.d.mts",
  "bin": "./dist/cli.mjs",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "turbo build:raw --filter=robuild",
    "build:raw": "pnpm test:types && pnpm robuild",
    "dev": "pnpm test:raw",
    "lint": "turbo lint:raw --filter=robuild",
    "lint:raw": "oxlint -c oxlint.json .",
    "lint:fix": "automd && oxlint -c oxlint.json --fix .",
    "format": "oxlint -c oxlint.json --fix .",
    "robuild": "esno src/cli.ts",
    "prepack": "pnpm build",
    "release": "pnpm test && changelogen --release && npm publish && git push --follow-tags",
    "test": "turbo test:raw --filter=robuild",
    "test:raw": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "turbo test:coverage:raw --filter=robuild",
    "test:coverage:raw": "vitest run --coverage && node scripts/update-coverage.mjs",
    "test:coverage:watch": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:types": "tsc --noEmit",
    "docs:dev": "vitepress dev docs",
    "docs:build": "turbo docs:build:raw --filter=robuild",
    "docs:build:raw": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "commit": "git-cz",
    "clean": "rm -rf .turbo dist coverage"
  },
  "dependencies": {
    "c12": "4.0.0-beta.2",
    "cac": "^6.7.14",
    "chokidar": "^5.0.0",
    "consola": "^3.4.2",
    "exsolve": "^1.0.8",
    "glob": "^13.0.3",
    "js-yaml": "^4.1.1",
    "magic-string": "^0.30.21",
    "minimatch": "^10.2.0",
    "oxc-minify": "^0.112.0",
    "oxc-parser": "^0.112.0",
    "oxc-transform": "^0.112.0",
    "pretty-bytes": "^7.1.0",
    "rolldown": "1.0.0-rc.4",
    "rolldown-plugin-dts": "^0.22.1",
    "tinyglobby": "^0.2.15",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "automd": "^0.4.3",
    "changelogen": "^0.6.2",
    "esno": "^4.8.0",
    "git-cz": "^4.9.0",
    "oxlint": "^1.49.0",
    "rolldown-plugin-wasm": "^0.2.1",
    "turbo": "^2.8.7",
    "vitepress": "^1.6.4",
    "vitepress-plugin-group-icons": "^1.7.1",
    "vitest": "^4.0.18"
  }
}
