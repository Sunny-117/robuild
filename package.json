{
  "name": "robuild",
  "type": "module",
  "version": "0.0.16",
  "packageManager": "pnpm@10.11.1",
  "description": "Zero-config ESM/TS package builder. Powered by Rolldown and Oxc",
  "license": "MIT",
  "repository": "Sunny-117/robuild",
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.mjs",
    "./config": "./dist/config.mjs"
  },
  "types": "./dist/index.d.mts",
  "bin": "./dist/cli.mjs",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm test:types && pnpm robuild",
    "dev": "pnpm test",
    "lint": "eslint .",
    "lint:fix": "automd && eslint . --fix",
    "robuild": "esno src/cli.ts",
    "prepack": "pnpm build",
    "release": "pnpm test && changelogen --release && npm publish && git push --follow-tags",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:coverage:watch": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:types": "tsc --noEmit --skipLibCheck src/**/*.ts",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "commit": "git-cz"
  },
  "dependencies": {
    "c12": "^3.0.4",
    "cac": "^6.7.14",
    "chokidar": "^3.0.3",
    "consola": "^3.4.2",
    "exsolve": "^1.0.5",
    "glob": "^11.0.3",
    "js-yaml": "^4.1.0",
    "magic-string": "^0.30.17",
    "minimatch": "^10.0.3",
    "oxc-minify": "^0.98.0",
    "oxc-parser": "^0.98.0",
    "oxc-transform": "^0.98.0",
    "pretty-bytes": "^7.0.1",
    "rolldown": "1.0.0-beta.30",
    "rolldown-plugin-dts": "^0.16.5",
    "tinyglobby": "^0.2.14",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.3.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.4.0",
    "@vitest/coverage-v8": "^3.2.2",
    "automd": "^0.4.0",
    "changelogen": "^0.6.1",
    "eslint": "^9.28.0",
    "esno": "^4.8.0",
    "git-cz": "^4.9.0",
    "prettier": "^3.5.3",
    "vitepress": "^1.6.3",
    "vitest": "^3.2.2"
  }
}
