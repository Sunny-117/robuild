{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["vitest/globals", "node"],
    "allowImportingTsExtensions": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedDeclarations": false,
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },
  "include": ["src", "test", "playground"],
  "exclude": [
    "test/temp",
    "playground/**/dist",
    "playground/**/node_modules",
    "playground/solid-app",
    "playground/svelte-app",
    "playground/vue-app",
    "playground/asset-handling",
    "playground/plugin-examples",
    "playground/unbuild-style",
    "playground/watch-mode"
  ]
}
